{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console":"off",
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "curly": [
            "error",
            "all"
        ],
        "space-before-blocks":[
            "error",
            "always"
        ],
        "no-unused-vars": [
            "error", {
              "varsIgnorePattern": "should|expect"
            }
        ]
    }
}